# Required
SECRET_KEY=change-me
# Example Postgres URL (adjust to your DB)
DATABASE_URL=postgresql+psycopg://user:pass@host:5432/dbname

# Optional
FRONTEND_URL=http://localhost:5173
ANALYSIS_CACHE_TTL=600
PORT=5000
# 100MB
MAX_CONTENT_LENGTH=104857600

# SMTP (optional; needed for reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# MEDIA_DIR is not used to persist analyzed videos,
# but the app expects it to exist; default is 'media'
MEDIA_DIR=media
